// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url=env("DATABASE_URL")
}

model Pets {
  id Int @id @default(autoincrement())
  category Categories? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId Int?
  name String @unique
  status String
  petTags PetTags[]
  petPhotos PetPhotos[]
}

model Categories {
  id Int @id @default(autoincrement())
  name String @unique
  pets Pets[]
}

model Tags {
  id Int @id @default(autoincrement())
  name String @unique
  petTags PetTags[]
}

model PetTags {
  pets Pets @relation(fields: [petId], references: [id], onDelete: Cascade)
  petId Int
  tags Tags @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId Int
  @@id([petId, tagId])
}

model PetPhotos {
  pet Pets @relation(fields: [petId], references: [id], onDelete: Cascade)
  petId Int
  photoUrl String
  @@id([petId, photoUrl])
}
